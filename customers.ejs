<%- include("partials/header"); -%>

  
        <h3>Customer List:</h3>        
     <div class="row">
  <div class="column">
    <h4>Name</h4>
                 <ol>
  <% customers.forEach(function(customer){ %>
                     <br> <li style="font-size:20px";><a href="/transaction/<%= customer.name %>"><%= customer.name %></a></li>
  <% }); %>
</ol>
  </div>
  <div class="column">
    <h4>Current Balance (in Rs.)</h4>
               
  <% customers.forEach(function(customer){ %>
         <br> <li style="font-size:20px";><%= customer.currentbalance %></li>
  <% }); %>

  </div>
          <div class="column">
              <h4>Email address</h4>
 <% emails.forEach(function(email){ %>
         <br> <li style="font-size:20px";><%= email %></li>
  <% }); %>
         </div>
</div> 
        
        

      
  

    
  <%- include("partials/footer"); -%>